{% extends 'testSolve/base.html.twig' %}

{% block wrapper %}
    {% if type == 'introduction' %}
        {{ component('TestSolveMessage', {
            'message': htmlFormat(testMessageAppSetting.introduction),
            'notFoundMessage': 'templates.testSolve.introduction.notFoundMessage'
        }) }}

        <a 
            class="btn btn-success" 
            href="{{ path('app_testsolve_solve', { id: testId }) }}" 
            role="button"
        >
            {{ 'templates.testSolve.introduction.goToTest'|trans }}
        </a>
    {% elseif type == 'conclusion' %}
        {{ component('TestSolveMessage', {
            'message': htmlFormat(testMessageAppSetting.conclusion),
            'notFoundMessage': 'templates.testSolve.introduction.notFoundMessage'
        }) }}
    {% endif %}
{% endblock %}