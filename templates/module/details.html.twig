{% extends 'base.html.twig' %}

{% block title %} 
    {{ 'title.module.details'|trans }} 
{% endblock %}

{% block body %}
    <div class="mt-2">
        {{ component('TableTitle', { title: 'question.data.table.title'|trans, defer: true }) }}
        {{ data_table_action_bar(questions) }}
        {{ data_table_table(questions) }}
        <div class="mt-3">
            {{ data_table_pagination(questions) }}
        </div>

        {# Temporary #}
        <div class="d-flex justify-content-around">
            {% for video in module.videos %}
                <video width="320" height="240" controls>
                    <source src="{{ path('app_video_watch', { id: video.id }) }}" />
                </video>
            {% endfor %}
        </div>

        {{ component('ModuleForm', { moduleProp: module, defer: true }) }}
    </div>
{% endblock %}
