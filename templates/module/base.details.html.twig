{% extends 'base.html.twig' %}

{% block title %} 
    {{ 'templates.module.details.title'|trans({ '%id%': module.id }) }} 
{% endblock %}

{% block body %}
    <nav class="nav nav-tabs">
        {{ component('NavLink', { 
            path: path('app_module_general', {
                id: module.id
            }),
            label: 'templates.module.details.tab.general'
        }) }}


        {{ component('NavLink', { 
            path: path('app_module_questions', {
                id: module.id
            }),
            label: 'templates.module.details.tab.questions'
        }) }}

        {{ component('NavLink', { 
            path: path('app_module_videos', {
                id: module.id
            }),
            label: 'templates.module.details.tab.videos'
        }) }}
    </nav>

    <div class="mt-4">
        {% block wrapper %}{% endblock %}
    </div>
{% endblock %}