{% extends 'base.html.twig' %}

{% block title %}
    {{ 'templates.auth.login.title'|trans }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-6 vh-100">
            <div 
                class="d-flex align-items-center justify-content-center h-100"
            >
                <div class="w-100 p-4">
                    <h1>
                        {{ 'templates.auth.login.header'|trans }}
                    </h1>
                    {{ form_start(form) }}
                        {{ form_row(form.email) }}
                        <div class="mt-3">
                            {{ form_row(form.password) }}
                        </div>

                        {% if error %}
                            <div class="text-danger mt-3 mb-3">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <div class="mt-3">
                            {{ form_row(form.submit) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div 
            class="col-6 vh-100 d-none d-lg-block"
        >
            <img 
                src="{{ asset('images/test.jpg') }}" 
                class="h-100 w-100 object-fit-cover" 
                alt="login-image"
            />
        </div>
    </div>
{% endblock %}