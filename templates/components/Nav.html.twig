<div {{ attributes }}>
    <nav 
        class="navbar navbar-expand-lg navbar"
    >
        <div class="container-fluid">
            <a 
                class="navbar-brand" 
                href="{{ path('app_home_index') }}"
            >
                <img 
                    src="{{ asset('/images/logo.png') }}" 
                    alt="logo" 
                    width="20" 
                    height="20" 
                /> 
                {{ 'templates.components.nav.navbar_brand'|trans }}
            </a>

            <button 
                class="navbar-toggler" 
                type="button" 
                data-bs-toggle="collapse" 
                data-bs-target="#navbarNav" 
                aria-controls="navbarNav" 
                aria-expanded="false" 
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>

            <div 
                class="collapse navbar-collapse" 
                id="navbarNav"
            >
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a 
                            class="nav-link" 
                            href="{{ path('app_home_index') }}"
                        >
                            {{ 'templates.components.nav.home'|trans }}
                        </a>
                    </li>

                    <li class="nav-item">
                        <a 
                            class="nav-link" 
                            href="{{ path('app_settings_general') }}"
                        >
                            {{ 'templates.components.nav.settings'|trans }}
                        </a>
                    </li>
                </ul>

                <ul 
                    class="navbar-nav ms-auto mb-2 mb-lg-0"
                >
                    <li class="nav-item">
                        <a 
                            class="nav-link" 
                            href="{{ path('app_auth_logout') }}" 
                            data-turbo="false"
                        >
                            {{ 'templates.components.nav.logout'|trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>