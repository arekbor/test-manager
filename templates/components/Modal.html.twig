<div 
    {{ attributes }}
    class="modal fade"
    id="{{ modalId }}"
    tabindex="-1"
    aria-labelledby="{{ modalId }}Label" 
    aria-hidden="true"
>
    <div 
        class="modal-dialog modal-dialog-centered" 
        role="document"
    >
        <div class="modal-content">
            <div class="modal-header">
                <h5 
                    class="modal-title" 
                    id="{{ modalId }}Label"
                >
                    {{ modalTitle }}
                </h5>
                <button 
                    type="button" 
                    class="btn-close" 
                    data-bs-dismiss="modal" 
                    aria-label="Close"
                >
                </button>
            </div>

            <div class="modal-body">
                {{ modalBody }}
            </div>

            <div class="modal-footer">
                <button 
                    type="button" 
                    class="btn btn-secondary" 
                    data-bs-dismiss="modal"
                >
                    {{ closeButtonText }}
                </button>

                <a 
                    href="{{ actionButtonHref }}" 
                    class="{{ actionButtonClass|default('btn btn-primary') }}"
                >
                    {{ actionButtonText }}
                </a>
            </div>
        </div>
    </div>
</div>