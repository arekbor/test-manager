<div {{ attributes }}>
    {{ form_start(form) }}

    {{ form_row(form.expirationDaysOffset) }}

    {{ form_row(form.notificationsEnabled) }}

    <div>
        {{ form_widget(form.testMessageAppSettings.vars.button_add) }}

        {% if form.testMessageAppSettings|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover align-middle text-nowrap">
                    <thead>
                        <tr>
                            <th scope="col">{{ 'table.testAppSetting.testMessageAppSettings'|trans }}</th>
                            <th scope="col">{{ 'table.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for testMessageAppSetting in form.testMessageAppSettings %}
                            <tr>
                                <td>
                                    {{ form_row(testMessageAppSetting.introduction) }}
                                    {{ form_row(testMessageAppSetting.conclusion) }}
                                </td>
                                <td>
                                    {{ form_row(testMessageAppSetting.language) }}
                                    <div class="d-flex justify-content-end">
                                        {{ form_widget(testMessageAppSetting.vars.button_delete) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}

        {{ form_errors(form.testMessageAppSettings) }}
    </div>

    <div class="mt-3">
        {{ form_widget(form.testPrivacyPolicyAppSettings.vars.button_add) }}

        {% if form.testPrivacyPolicyAppSettings|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover align-middle text-nowrap">
                    <thead>
                        <tr>
                            <th scope="col">{{ 'table.testAppSetting.testPrivacyPolicyAppSettings'|trans }}</th>
                            <th scope="col">{{ 'table.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for testPrivacyPolicyAppSetting in form.testPrivacyPolicyAppSettings %}
                            <tr>
                                <td>{{ form_row(testPrivacyPolicyAppSetting.content) }}</td>
                                <td>
                                    {{ form_row(testPrivacyPolicyAppSetting.language) }}
                                    <div class="d-flex justify-content-end">
                                        {{ form_widget(testPrivacyPolicyAppSetting.vars.button_delete) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}

        {{ form_errors(form.testPrivacyPolicyAppSettings) }}
    </div>

    <div class="my-2">
        {{ form_widget(form.submit) }}
    </div>

    {{ form_end(form) }}
</div>
