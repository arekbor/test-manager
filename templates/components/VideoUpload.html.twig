<div 
    {{ attributes.defaults(
        stimulus_controller('video_upload', {
            url: path('app_video_uploadvideo'), 
            moduleId: moduleId
        })
    ) }}
    {{ stimulus_target('video_upload', 'dropzone') }}
    {{ 
        stimulus_action('video_upload', 'handleFileDrop', 'drop') | 
        stimulus_action('video_upload', 'handleDragOver', 'dragover') | 
        stimulus_action('video_upload', 'handleDragLeave', 'dragleave') 
    }}
    class="drop-zone-container"
>
    <div class="d-flex flex-column align-items-center justify-content-center h-100">
        
        <!-- Hidden file input -->
        <input 
            type="file"
            class="d-none"
            {{ stimulus_target('video_upload', 'input') }}
            {{ stimulus_action('video_upload', 'handleFileInputChange', 'change') }}
        />

        <!-- Upload image -->
        <img 
            src="{{ asset('/images/upload.svg') }}" 
            alt="upload"
            {{ stimulus_target('video_upload', 'uploadImage') }}
        />

        <!-- Spinner during file upload -->
        <div 
            class="spinner-border drop-zone-spinner d-none mb-2" 
            role="status"
            {{ stimulus_target('video_upload', 'spinner') }}
        >
        </div>

        <!-- File name preview -->
        <div 
            class="text-secondary"
            {{ stimulus_target('video_upload', 'previewFilename') }}
        >
        </div>

        <!-- Abort button -->
        <button
            class="btn btn-outline-warning mt-2 d-none"
            {{ stimulus_action('video_upload', 'handleAbort', 'click') }}
            {{ stimulus_target('video_upload', 'abortButton') }}
        >
            {{ 'video.upload.video.abort.button'|trans }}
        </button>

        <!-- Upload progress -->
        <div 
            class="text-dark mt-2"
            {{ stimulus_target('video_upload', 'progress') }}
        >
        </div>

        <!-- File selection button -->
        <button 
            class="btn btn-outline-primary mt-2"
            {{ stimulus_action('video_upload', 'handleFileSelection', 'click') }}
            {{ stimulus_target('video_upload', 'fileSelectionButton') }}
        >
            {{ 'video.upload.file.selection.button'|trans }}
        </button>

        <!-- Informational paragraph -->
        <div 
            class="text-secondary mt-2"
            {{ stimulus_target('video_upload', 'videoParagraph') }}
        >
            {{ 'video.upload.file.selection.paragraph'|trans }}
        </div>

        <!-- Feedback message area -->
        <div 
            class="mt-3"
            {{ stimulus_target('video_upload', 'feedback') }}
        >
        </div>

    </div>
</div>