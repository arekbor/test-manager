<div {{ attributes }}>
    {{ form_start(form) }}

        {{ form_row(form.content) }}
        <div class="mt-3">
            {{ form_widget(form.answers.vars.button_add) }}
        </div>

        {% if form.answers|length > 0 %}
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">
                            {{ 'answer.form.content.header'|trans }}
                        </th>
                        <th scope="col">
                            {{ 'answer.form.correct.header'|trans }}
                        </th>
                        <th scope="col">
                            {{ 'answer.form.actions.header'|trans }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for answer in form.answers %}
                        <tr>
                            <th>
                                {{ form_row(answer.content) }}
                            </th>
                            <th>
                                {{ form_row(answer.correct) }}
                            </th>
                            <th>
                                {{ form_row(answer.vars.button_delete) }}
                            </th>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>         
        {% endif %}

    <div class="mt-2 mb-3">
        {{ form_widget(form.submit) }}
    </div>

    {{ form_end(form) }}
</div>