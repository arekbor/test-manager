<div {{ attributes }}>
    {{ form_start(form) }}

    {{ form_row(form.content) }}

    {{ form_widget(form.answers.vars.button_add) }}

    {% if form.answers|length > 0 %}
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">{{ 'answer.form.content.header'|trans }}</th>
                        <th scope="col">{{ 'answer.form.correct.header'|trans }}</th>
                        <th scope="col">{{ 'answer.form.actions.header'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for answer in form.answers %}
                        <tr>
                            <td>{{ form_row(answer.content) }}</td>
                            <td>{{ form_row(answer.correct) }}</td>
                            <td>{{ form_widget(answer.vars.button_delete) }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    {{ form_widget(form.submit) }}

    {{ form_end(form) }}
</div>