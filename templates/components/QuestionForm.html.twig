<div {{ attributes }}>
    {{ form_start(form) }}
    {{ form_row(form.content) }}
    {{ form_widget(form.answers.vars.button_add) }}

    {% if form.answers|length > 0 %}
        <div class="table-responsive">
            <table 
                class="table table-hover align-middle text-nowrap"
            >
                <thead>
                    <tr>
                        <th scope="col">
                            {{ 'table.question.content'|trans }}
                        </th>
                        <th scope="col">
                            {{ 'table.question.correct'|trans }}
                        </th>
                        <th scope="col">
                            {{ 'table.question.actions'|trans }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for answer in form.answers %}
                        <tr>
                            <td>
                                {{ form_row(answer.content) }}
                            </td>
                            <td>
                                {{ form_row(answer.correct) }}
                            </td>
                            <td>
                                {{ form_widget(answer.vars.button_delete) }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    <div class="my-2">
        {{ form_widget(form.submit) }}
    </div>
    {{ form_end(form) }}
</div>