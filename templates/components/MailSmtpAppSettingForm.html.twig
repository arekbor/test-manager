<div {{ attributes }}>
    {{ form_start(form) }}
        
    <div class="row">
        <div class="col-12">
            {{ form_row(form.fromAddress) }}
        </div>

        <div class="col-12 col-xl-6">
            {{ form_row(form.host) }}
        </div>
        <div class="col-12 col-xl-6">
            {{ form_row(form.port) }}
        </div>

        <div class="col-12 col-xl-6">
            {{ form_row(form.username) }}
        </div>
        <div class="col-12 col-xl-6">
            {{ form_row(form.password) }}
        </div>

        <div class="col-12 col-xl-6">
            {{ form_row(form.smtpAuth) }}
        </div>

        <div class="col-12 col-xl-6">
            {{ form_row(form.smtpSecure) }}
        </div>

        <div class="col-12">
            {{ form_row(form.timeout) }}
        </div>

        <div class="col-12">
            {{ form_row(form.submit) }}
        </div>
    </div>
    {{ form_end(form) }}
</div>
